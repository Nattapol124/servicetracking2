<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx" 
       xsi:schemaLocation=" http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd">
    
    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource" />
    </bean>
    <aop:config>
        <aop:pointcut id="coreServiceMethods" expression="execution(* com.core.service.impl.*ServiceImpl.*(..))" />
        <aop:pointcut id="eduServiceMethods" expression="execution(* com.sme.server.*.service.impl.*ServiceImpl.*(..))" />
       	<aop:advisor advice-ref="txAdviceService" pointcut-ref="coreServiceMethods" />
        <aop:advisor advice-ref="txAdviceService" pointcut-ref="eduServiceMethods" />
    </aop:config>
    <tx:advice id="txAdviceService" transaction-manager="hibernateTransactionManager">
        <tx:attributes>
            <tx:method name="get*" read-only="true" propagation="SUPPORTS" />
            <tx:method name="search*" read-only="true" propagation="SUPPORTS" />
            <tx:method name="find*" read-only="true" propagation="SUPPORTS" />
            <tx:method name="*" />
        </tx:attributes>
    </tx:advice>
</beans>
